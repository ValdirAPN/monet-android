<resources>
    <!-- Base application theme. -->
    <style name="Theme.Monet" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorOnPrimary">@color/green_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_800</item>
        <item name="colorSecondaryVariant">@color/blue_400</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryContainer">@color/green_700</item>
        <item name="colorOnPrimaryContainer">@color/green_100</item>
        <item name="colorOnSecondaryContainer">@color/green_500</item>
        <item name="colorSecondaryContainer">@android:color/transparent</item>

        <item name="materialButtonStyle">@style/DefaultButton</item>
    </style>
    
    <style name="DefaultButton" parent="Widget.Material3.Button">
        <item name="android:paddingVertical">16dp</item>
    </style>
</resources>